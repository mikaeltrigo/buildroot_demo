## @file    setup_leds
##
## @brief   Setup GPIO LEDs
##
## @author  Thomas KÃ¶ller
##
## @date    20.02.2017
##
## @copyright (c) 2017-2018, Basler AG
##
## @license BSD 3-Clause License


linkdir="/run/bconctl/leds"

setup ()
{
    name="led-user$1"
    cd "${name}"
    ln -s "${PWD}" "${linkdir}/${name}"
    chmod 666 'brightness' 'trigger'
    echo 'none' >trigger
    echo '0' >'brightness'
    cd ..
}

cd /sys/devices/soc0/gpio-leds/leds

case "$ACTION" in
    add)
        test -d "${linkdir}" || mkdir -p "${linkdir}"
        setup 0
        setup 1
        setup 2
        ;;
    remove)
        rm -rf "${linkdir}"
        ;;
esac
