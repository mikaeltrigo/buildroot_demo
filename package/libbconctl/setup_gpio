## @file    setup_gpio
##
## @brief   Setup GPIOs
##
## @author  Thomas KÃ¶ller
##
## @date    25.01.2017
##
## @copyright (c) 2017-2018, Basler AG
##
## @license BSD 3-Clause License


linkdir="/run/bconctl/gpio"

setup ()
{
    echo "${1}" >export
    echo 'out' >gpio${1}/direction
    echo '0' >gpio${1}/active_low
    echo '0' >gpio${1}/value
    chmod 666 gpio${1}/active_low
    chmod 666 gpio${1}/direction
    chmod 666 gpio${1}/value
    lnk=`readlink gpio${1}`
    lnk=`realpath "${lnk}"`
    ln -s "${lnk}" "${linkdir}/gpio_$2"
}

cd /sys/class/gpio

case "$ACTION" in
    add)
        test -d "${linkdir}" || mkdir -p "${linkdir}"
        setup 976 camera_address
        setup 977 camera_power
        ;;
    remove)
        rm -rf "${linkdir}"
        ;;
esac
